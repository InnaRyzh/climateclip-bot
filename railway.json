{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd bot && npm install --production=false"
  },
  "deploy": {
    "startCommand": "cd bot && node --max-old-space-size=16384 --loader tsx server.ts",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

